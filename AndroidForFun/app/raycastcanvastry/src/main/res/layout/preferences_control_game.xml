<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginBottom="4dp"
        android:text="Inversion of rotation"
        app:layout_constraintBottom_toTopOf="@+id/inverse"
        app:layout_constraintEnd_toEndOf="@+id/inverse"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inverse" />

    <SeekBar
        android:id="@+id/inverse"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:max="1"

        android:onClick="tapEventSeek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/grad"
        android:thumb="@drawable/potato"
        app:layout_constraintVertical_bias="0.150" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="Walls height"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="@+id/seekBar2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/seekBar2" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:max="10"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/grad"
        android:thumb="@drawable/potato"
        app:layout_constraintVertical_bias="0.300" />

    <TextView
        android:id="@+id/resolutionText"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="image resolution"
        app:layout_constraintBottom_toTopOf="@+id/resolutionBar"
        app:layout_constraintEnd_toEndOf="@+id/resolutionBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/resolutionBar" />

    <SeekBar
        android:id="@+id/resolutionBar"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:max="20"
        android:progress="17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/grad"
        android:thumb="@drawable/potato"
        app:layout_constraintVertical_bias="0.450" />

    <SeekBar
        android:id="@+id/cameraHeightBar"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:max="9"
        android:progress="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/grad"
        android:thumb="@drawable/potato"
        app:layout_constraintVertical_bias="0.600" />
    <TextView
        android:id="@+id/cameraHeightText"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="camera height"
        app:layout_constraintBottom_toTopOf="@+id/cameraHeightBar"
        app:layout_constraintEnd_toEndOf="@+id/cameraHeightBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cameraHeightBar" />

    <Button
        android:id="@+id/button4"
        android:layout_width="155dp"
        android:onClick="tapEventBack"
        android:layout_height="61dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.750" />

</androidx.constraintlayout.widget.ConstraintLayout>